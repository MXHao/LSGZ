.container{
  padding:30rpx 30rpx 20rpx;
}
page{
  background: #9f86f1;
  padding-top: 60rpx;
}
/* 搜索框 */
.box {  
  padding: 20rpx 0; 
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  background: #9f86f1;
}
.bg-white{
  background: #9f86f1;
}
.cu-bar .search-form {
	line-height: 64rpx;
	height: 60rpx;
	font-size: 30rpx;
	color: #9a9a9a;
	flex: 1;
	display: flex;
	align-items: center;
  border-radius: 30rpx 30rpx;
  margin: 0 30rpx;
  background: #fff
}
.deviceSearch {
  margin-left: 250rpx !important;
}
.cu-bar {
  width: 100%;
}
.search-form {
  width: 560rpx;
}

.cuIcon-searchshow {
font-family: "cuIcon";
font-size: inherit;
font-style: normal;

}
.cu-btn {
  margin: 0 -28rpx 0 10rpx;
}
/* 搜索框结束 */
.block{
  margin-top:30rpx;
  width:100%;
  min-height: 200rpx;
  border-radius:10rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8px 2rpx #7760c3;
  display: flex;
  align-items: center;
  position: relative;
  justify-content: flex-start;
  padding:20rpx 20rpx 20rpx 0
}
.distance{
  display: flex;
justify-content: flex-end;
align-items: center;
width: 50%;
position: absolute;
right: 33rpx;
top: 50%;
transform: translateY(-50%)

}
.history {
  color: #fff;
  position: absolute;
  top: 3rpx;
  left: 3rpx;
  font-size: 24rpx;
  /* border-right: 1rpx solid #36d3d5;
  border-bottom: 1rpx solid #36d3d5; */
  border-radius: 7rpx;
  background-color: rgba(22, 88, 22, 0.507);
  padding: 0 0 0 10rpx;
  box-shadow: 5rpx 5rpx 2rpx rgba(0, 0, 0, 0.3)
}
.blockOn{
  /* border-bottom: 8rpx solid #f75252; */
}
.selectAddress{
  border-bottom: 6rpx solid #36d3d5;  
}
.block view{
  
}
.padding-xl{
  padding: 0;
  background: #fff
}
.addbox{
  height: 100rpx
}
.title {
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.block .left image{
  width:80rpx;
  height:80rpx;
  margin: 0 auto;
  display: table
}
.left{
  flex: 20%
}
.name {
  font-size:30rpx;
  color:#333;
  font-weight:600;
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}
 .phone {
  font-size:28rpx;
  color:#7760c3;
  font-weight:600;
  white-space: nowrap; 
  text-overflow:ellipsis;

}
/* .phone {
  font-size:30rpx;
  color:#333;
  font-weight:600;
} */
.middle{
  flex: 80%
}
.middle .address{
  font-size:26rpx;
  color:#666;
  margin-top: 56rpx;
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.phone text{
  color: #7760c3;
  margin-right: 5rpx
}
.right{
  color: #999
}
.right image{
  width:34rpx;
  height: 34rpx;
}

.addBox{
    margin-top:30rpx;
    width:100%;
    height: 180rpx;
    border-radius:10rpx;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8px 2rpx rgba(198, 201, 208, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.addBox .add{
  display: flex;
}
.addBox .add image{
  width:50rpx;
  height: 50rpx;
  margin-right:30rpx;
}
.addBox .add text{
  font-weight: 600;
  font-size:30rpx;
  color:#111;
}
.container button{
  margin-top:30rpx;
  background:#36D3D5;
  border-radius:50rpx;
  color:#fff;
  font-size: 32rpx;
  line-height: 94rpx;
  height:94rpx;
}
.addbox{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-top: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6;
  height: 100rpx
}
.addName{
  display: flex;
  border-right: 1rpx solid #E6E6E6
}
.addName label{
  width: 30%;
  color: #999
}
.addIhone{
  display: flex
}
.addIhone label{
  width: 30%;
  color: #999
}
.position{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 20rpx
}
.message{
  border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
}
.message textarea{
  text-align: left;
  padding: 20rpx;
  width: 100%;
  height: 200rpx
}
.message input {
  text-align: left;
  padding: 20rpx;
  width: 100%;
  height: 200rpx
}
.messagebutton{
  padding: 0 30rpx 30rpx 30rpx
}
.cu-dialog {
  vertical-align: top;
  top: 200rpx;
  animation: cu-dialog 0.5s
}
@keyframes cu-dialog{
  from{
    opacity: 0;
  }
  to{
    opacity: 100%;
  }
}
