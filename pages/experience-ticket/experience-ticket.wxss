/* 优惠券列表 */
/* 底部商品列表 */
.scroll{
  margin-top: 5px;
}
.searchshow-list-column {
  padding: 10rpx 30rpx 30rpx;
}
.showlist-item-column {
  position: relative;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.2);
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #fff;
  margin-top: 25rpx;
  border-radius: 15rpx;
  
}
.showlist-item-column:first-child {
  margin-top: 0;
}
.item-img {
display: inline-block;
width: 180rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  border-radius: 10rpx;
}
.couponIcon {
  color: #fff;
  font-weight: 700;
  font-style: italic;
  text-align: center;
  font-size: 44rpx;
}
.img-unused {
background: linear-gradient(to bottom right, #36d3d5, #46e7e9);
}

.img-used {
background-color: #ccc;
}
.column-item-right {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 70%;
  padding: 20rpx;
}
.item-title-column {
  /* 超过一行隐藏 */
  text-align: left;
  font-size: 30rpx;
  color: #111;
  margin: 0rpx 15rpx 0;
  line-height: 50rpx;
  white-space: nowrap; 
  width: 100%; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.title-column-limit {
  font-size: 24rpx;
  margin-left: 15rpx;
  line-height: 38rpx;
  width: 300rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  overflow: hidden;
  text-align: justify;
}
.title-date {
  font-size: 24rpx;
  color: #aaa;
  margin-left: 15rpx;
  line-height: 40rpx;

}
.date1 {
  margin-top: 10rpx;
}
.item-use {
  padding: 5rpx 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  color: #36d3d5;
  display: inline-block;
  border: 1px solid #36d3d5;
  border-radius:8rpx;
  white-space: nowrap;
  position: absolute;
  right: 3%;
  top: 40%;
  transform: translateY(-50%);
  line-height: 40rpx;
}
.item-use:active {
  color: #fff;
  background-color: #36d3d5;
}
.item-used,
.item-overdue {
  width: 126rpx;
  height: 120rpx;
  position: absolute;
  right: 3%;
  top: 50%;
  transform: translateY(-50%);
}

.item-used image,
.item-overdue image {
  width: 100%;
  height: 100%;
}
.noOrder {
  height: 337rpx;
  width: 370rpx;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  top: 290rpx;
}
.noOrder image {
  height: 100%;
  width: 100%;
  
}