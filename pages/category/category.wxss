/* pages/component/nav/nav.wxss */
page{
  background: #fff
}
.VerticalNav.nav {
  width: 220rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #f5f5f5;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #fff;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.padding-lr {
  padding-left: 10rpx
}
.VerticalBox{
  display: flex;
  background: #fff;
}
.VerticalMain{
  background-color: #fff;
}
.commodity{
  display: flex;
  justify-content: flex-start;
  background: #fff;
  padding: 10rpx;
  flex-wrap:wrap
}
.commodityList{
  width: 30%;
  margin:3% 1%;
}
.commodityimg{
  padding: 10rpx;
  width: 90%;
  height: 150rpx;
  display: table;
  margin: auto
}
.commodityimg image{
  width: 100%;
  height: 100%;
  object-fit: cover
}
.commoditytext{
  text-align: center
}
