  /* border-bottom: 10rpx solid rgba(0, 0, 0, 0.1) */
}
.diamond-item {
  flex: 1;
  margin: 5rpx 20rpx;
  font-size: 24rpx;
  text-align: center;
  color: #666;
}

.diamond-item image {
  width: 98rpx;
  height: 98rpx;
}

