/* 猫狗主粮和零食玩具 */

.catdog-ad, .toys-ad, .super-ad, .recommend-ad, .newuser-ad {
  height: 280rpx;
}

.catdog-ad image, .toys-ad image, .super-ad image, .recommend-ad image,
.newuser-ad image {
  height: 100%;
  width: 100%;
}

.catdog-goodslists, .toys-goodslists, .seckill-goodslists {
  background-color: #f8f8f8;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
}

.catdog-goods, .toys-goods {
  width: 220rpx;
  margin: 18rpx 10rpx 10rpx;
  display: inline-block;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  padding-bottom: 10rpx;
  background: #fff;
}

.goods-img {
  height: 200rpx;
  width: 100%;
  margin: 0 auto;
  border-radius: 15rpx 15rpx 0 0;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  padding: 4rpx;
}

.goods-img image {
  width: 100%;
  height: 100%;
}

.goods-desc {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #444;
  width: 100%;
  padding: 0 8rpx;
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
height: 72rpx;
line-height: 36rpx;
}

.goods-price {
  font-size: 30rpx;
  color: #f15252;
  font-weight: 700;
  text-align: left;
  padding: 0 5rpx;
  margin-top: 10rpx;
}

/* 今日秒杀 */

.seckill-interval {
  line-height: 44rpx;
  font-size: 24rpx;
  margin-left: 3%;
  color: #999;
}

.seckill-goodslists {
  background-color: #fff;
}

.seckill-goods {
  width: 28%;
  margin: 0 1% 5% 2%;
  display: inline-block;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 5rpx;
  border-radius: 10rpx;
}

.seckill-goods-img {
  height: 190rpx;
  width: 100%;
  margin: 0 auto;
}

.seckill-goods-img image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 15rpx 15rpx 0 0;
}

.seckill-goods-desc {
  margin-top: 10%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  color: #444;
  line-height: 35rpx;
  padding: 0 5rpx;
}

.seckill-goods-price {
  margin-top: 5%;
  font-size: 28rpx;
  color: #f15252;
  font-weight: 700;
  text-align: left;
  float: left;
}

.seckill-btn-gray, .seckill-btn-red {
  font-size: 20rpx;
  background-color: #999;
  color: #fff;
  margin-top: 6%;
  float: right;
  border-radius: 15rpx 15rpx;
  padding: 5rpx 10rpx;
}

.seckill-btn-red {
  background-color: #f15252;
}

/* 超级品牌日 */

.super-msg {
  color: #3ddee0;
  font-size: 24rpx;
  font-weight: 500;
  margin-left:3%;
}

.super-brandlists {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
  background: #f8f8f8;
  padding: 20rpx 0
}

.super-brand {
  /* margin-top: 20rpx; */
  width: 200rpx;
  height: 150rpx;
  /* padding: 20rpx 5rpx; */
  /* box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, .1); */
  border-radius: 20rpx;
  background: #fff;
}

.super-brand image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  vertical-align: middle;
}
.brand-desc {
  text-align: center;
  width: 100%;
  font-size: 16rpx;
  /* line-height: 64rpx; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 25rpx
}
/* 新品推荐 */

.recommend {
  white-space: nowrap;
  overflow: hidden;
  margin-top: 20rpx;
}

.recommend-item {
  width: 38%;
  display: inline-block;
  margin: 10rpx 10rpx 0;
}

.recommend-img {
  height: 200rpx;
  border-radius: 15rpx 15rpx 0 0;
  border: 1rpx solid rgba(128, 128, 128, 0.356);
  overflow: hidden;
}

.recommend-img image {
  width: 100%;
  height: 100%;
}

.recommend-desc {
  font-size: 24rpx;
  color: white;
  background-color: #3ddee0;
  border-radius: 0 0 10rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  letter-spacing: 2rpx;
  padding: 0 5rpx;
  white-space:initial;
  text-align: center
}

/* 猜你喜欢 */

