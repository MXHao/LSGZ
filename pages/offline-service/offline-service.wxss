page {
  background-color: #fff;
  border-top: 1px solid rgba(204, 204, 204, 0.349);
}

.coupon-tab {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid rgba(204, 204, 204, 0.349);
}

.tab-item {
  flex: 1;
  font-size: 30rpx;
  line-height: 130rpx;
  text-align: center;
  color: #999;
}

.item-active {
  color: #36d3d5;
}

.item-active text {
  padding: 20rpx 10rpx;
  border-bottom: 5rpx solid #36d3d5;
}

