/* 优惠券列表 */

/* 底部商品列表 */

.scroll {
  margin-top: 5px;
}

.searchshow-list-column {
  padding: 10rpx 30rpx 30rpx;
}

.showlist-item-column {
  position: relative;
  box-shadow: 3rpx 1rpx 15rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 25rpx;
  border-radius: 10rpx;
}

.showlist-item-column:first-child {
  margin-top: 0;
}

.item-img {
  display: inline-block;
  width: 135rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 0 10rpx 0 10rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.couponIcon {
  color: #fff;
  font-weight: 700;
  font-style: italic;
  text-align: center;
  font-size: 28rpx;
}

.img-unused {
  background: linear-gradient(to bottom right, #36d3d5, #46e7e9);
}

.rainbow {
  background: linear-gradient(to right, #ff9569 0%, #e92758 100%);
}

.azure {
  background: linear-gradient(-90deg, #29bdd9 0%, #276ace 100%);
}

.img-used {
  background-color: #ccc;
}

.column-item-right {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 75%;
  margin-left: 5rpx;
  padding-top: 40rpx;
}

.item-title-column {
  /* 超过一行隐藏 */
  text-align: left;
  font-size: 30rpx;
  color: #111;
  margin: 0rpx 15rpx 0;
  line-height: 50rpx;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.title-column-limit {
  font-size: 28rpx;
  margin-left: 15rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: left;
}

.title-column-limits {
  font-size: 28rpx;
  margin-left: 15rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: left;
  margin-bottom: 15rpx;
}

.title-date {
  font-size: 24rpx;
  color: #aaa;
  margin-left: 15rpx;
}

.date1 {
  /* width: 300rpx; */
}

.item-use {
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  background-color: #fff;
  color: #36d3d5;
  display: inline-block;
  border: 1px solid #36d3d5;
  border-radius: 8rpx;
  white-space: nowrap;
  line-height: 40rpx;
  width: 130rpx;
  text-align: center;
  margin: 0 10rpx;
}

.bottom-btn {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  margin-left: 15rpx;
}

.item-refund {
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  background-color: #fff;
  color: #aaa;
  display: inline-block;
  border: 1px solid #aaa;
  border-radius: 14rpx;
  white-space: nowrap;
  line-height: 40rpx;
  width: 130rpx;
  text-align: center;
  margin: 0 10rpx;
}

.item-use:active {
  color: #fff;
  background-color: #36d3d5;
}

.item-refund:active {
  color: #fff;
  background-color: #aaa;
}

.item-used, .item-overdue {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 3%;
  top: 50%;
  transform: translateY(-50%);
}

.item-used image, .item-overdue image {
  width: 100%;
  height: 100%;
}

.noOrder {
  height: 337rpx;
  width: 370rpx;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  top: 290rpx;
}

.noOrder image {
  height: 100%;
  width: 100%;
}

.shoplogo {
  width: 180rpx;
  height: 180rpx;
}

.shoplogo image {
  width: 100%;
  height: 100%;
}
