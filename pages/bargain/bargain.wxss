/* pages/bargain/bargain.wxss */
page {
  background-color: #e4554b;
}
.bargain-banner {
  width: 100%;
}
.bargain-banner image {
  height: 350rpx;
  width: 100%;
}
/* 底部商品列表 */
.searchshow-list-column {
  padding: 0 30rpx 30rpx;
}
.showlist-item-column {
  border-bottom: 1px solid #e6e6e6;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 30rpx 30rpx;
  background-color: #fff;
  margin-top: 30rpx;
  border-radius: 15rpx;
  
}
.item-img-column {
display: inline-block;
width: 170rpx;
  height: 170rpx;
}
.item-img-column image {
  width: 100%;
  height: 100%;
  
}
.column-item-right {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 75%;
  padding: 20rpx;
}
.item-title-column {
  /* 超过一行隐藏 */
  text-align: left;
  font-size: 26rpx;
  color: #111;
  margin: 0rpx 15rpx 0;
  line-height: 30rpx;
  white-space: nowrap; 
  width: 100%; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.number {
  background-color: #ef4d4d;
  color: #fff;
  padding: 2rpx 15rpx;
  display: inline-block;
  border-radius: 15rpx;
  font-size: 16rpx;
  margin-left: 15rpx;
}
.item-price-column {
 position: relative;
  margin: 0 15rpx;
  
}
.price-red {
  color: #ef4d4d;
  font-size: 24rpx;
  font-weight: 700;
  line-height: 45rpx;
  
}
.price-gray {
  color: #999;
  font-size: 24rpx;
  line-height: 28rpx;
  
}

.add-to-cart-column {
  font-size: 24rpx;
  position: absolute;
  bottom: 0rpx;
  right: -30rpx;
  color: #fff;
  background-color: #ef4d4d;
  border-radius: 35rpx;
  padding: 15rpx 35rpx;
}
