/* pages/order/order.wxss */

.nav .cu-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  color: #999;
  z-index: 99;
  width: 17%;
  text-align: center
}
.nav .text-cyan {
  color: #36d3d5
}
.scroll{
  margin-top:90rpx;
  height: 89vh;
}
.time {
  font-size: 30rpx;
}

.Numberingvontent {
  font-size: 30rpx;
}

.MyOrdertitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

page {
  background: #fff;
}

.nav .cu-item.cur {
  color: #36d3d5;
}

.content {
  padding: 30rpx;
  margin-top: 80rpx;
}

.order {
  margin: 30rpx;
  box-shadow: 0 0 15rpx #e8e8e8;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  padding: 30rpx
}

.orderbox {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx 0;
}

.orderimg {
  width: 26%;
  height: 160rpx;
  overflow: hidden;
  border-radius: 10rpx;
}

.orderimg image {
  width: 100%;
  height: 100%;
}

.orderContent {
  width: 73%;
  margin-left: 2%;
}

.orderTitle {
  font-weight: 600;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /*我设置的是文字超过1行显示...；行数可以随便改；*/
  overflow: hidden;
  width: 65%;
}

.text {
  color: #ef4d4d;
  font-weight: 600;
  font-size: 32rpx;
  margin: 15rpx 0;
}

.bottom {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}

.bottom .bottomText {
  color: #999;
}

.bg-white {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 999;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center
}
.mask-btn {
  display: flex;
justify-content: center;
padding: 30rpx 0;

}
.Numbering {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.Ship {
  color: #36d3d5;
}

.list {
  /* margin-bottom: 20rpx */
}

.bottomprice {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bottombutton {
  z-index:1000;
  background: #fff;
  border: 1rpx solid #999;
  border-radius: 50rpx;
  color: #999;
  padding: 15rpx 20rpx;
  line-height: 1;
  margin: 0;
  font-size: 30rpx;
  margin-left: 20rpx;
  width: 200rpx;
}

.bottom button::after {
  border: none;
}

.bottombuttonON {
  border: 1rpx solid #36d3d5;
  background: #36d3d5;
  border-color: #36d3d5;
  border-radius: 50rpx;
  color: #fff;
  padding: 15rpx 20rpx;
  line-height: 1;
  margin: 0;
  font-size: 30rpx;
  margin-left: 20rpx;
  width: 200rpx;
}

.Numberingvontent {
  color: #36d3d5;
}

.pricetext {
  color: #999;
}

.pricetext text:nth-child(1) {
  margin-right: 10rpx;
}

.pricetext text:nth-child(2) {
  color: #ef4d4d;
  font-weight: 600;
}

.digital {
  color: #999;
  text-align: right;
  line-height: 42rpx;

}

.MyOrdertext {
  display: flex;
  justify-content: flex-end;
  color: #999;
  margin-top: 40rpx;
  align-items: center;
}

.MyOrdertext text:nth-child(2) {
  color: var(--color-red);
  font-weight: 600;
}

.cu-bar .content {
  position: absolute;
  text-align: center;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  font-size: 32rpx;
  line-height: 13rpx;
  cursor: none;
  font-weight: 600;
  text-overflow:clip
}
.cancelOrder text{
  color: #ef4d4d
}
.noOrder {
  height: 322rpx;
  width: 303rpx;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  top: 290rpx;
}
.noOrder image {
  height: 100%;
  width: 100%;
  
}
.line {
  text-align: center;
  background: #fff
}