page {
  background-color: #fff;
  box-sizing: border-box;
}
/* 返回顶部 */
.goTop{
  z-index: 999;
  height: 90rpx;
  width: 90rpx;
  position: fixed;
  bottom: 50rpx;
  right: 6.5%;
  border-radius: 50%;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-weight: 800;
  font-size: 50rpx;
}
/* 购物车非空 */

.cart-item-list {
  padding: 10rpx 30rpx 0 20rpx;
}

.cart-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0rpx;
}

.cart-button {
  width: 10%;
}

.showlist-item-column {
  /* border: 1px solid #e6e6e6; */
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 15rpx rgba(0, 0, 0, 0.05);
  width: 90%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 15rpx 20rpx;
}



.item-img-column {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
}

.item-img-column image {
  width: 100%;
  height: 100%;
}

.column-item-right {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 75%;
  position: relative;
}

.item-title-column {
  /* 超过两行隐藏 */
  text-align: left;
  font-size: 26rpx;
  color: #111;
  margin: 0rpx 15rpx 0;
  line-height: 45rpx;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  letter-spacing: 2rpx;
}


.item-price-column {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 15rpx;
}

.cart-red {
  color: #ef4d4d;
  font-size: 32rpx;
  font-weight: 700;
  display: inline-block;
  line-height: 60rpx;
  margin-top: 10rpx;
}

.item-num {
  font-size: 30rpx;
  position: absolute;
  right: 10rpx;
  bottom: 10%;
  text-align: center;
}





input {
  text-align: center;
}

.cart-num {
  display: block;
  width: 30%;
  line-height: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}

/* 底部结算栏 */

.cart-bottom {
  position: fixed;
  bottom: 0;
  z-index: 999;
  height: 155rpx;
  width: 100%;
  padding: 30rpx 30rpx;
}
.btn-next {
  width: 100%;
  color: #fff;
  background-color: #36d3d5;
  text-align: center;
  font-size: 32rpx;
  display: inline-block;
  padding: 30rpx 280rpx;
  font-weight: 700;
  border-radius: 50rpx;
}



