/* components/search-list/search-list.wxss */
page {
  border-top: 1rpx solid #e6e6e6;
  background-color: #fff;
  box-sizing: border-box;
  padding-top: 86rpx;
  }
.noSearchResult {
  position: absolute;
  top: 300rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 320rpx;
  height: 185rpx;
  z-index: 99
}
.noSearchResult image {
  height: 100%;
  width: 100%;
}
.cu-bar {
  position: fixed;
width: 100%;
top: 0;
background: #fff;
padding: 20rpx 0;
z-index: 1;

}
.searview {
  height: 60rpx;
  width: 100%;
  position: relative;
  border-right: 0;
  border-radius: 10rpx;
  box-sizing: border-box;
 
}
.searview button {
  width: 130rpx;
  
  position: absolute;
  right: 0;
  top: -2rpx;
  background-color: #36d3d5;
  color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 0 10rpx 10rpx 0;
}
 
.searview input {
  font-size: 20rpx;
  color: #666;
 height: 60rpx;
 margin-left: 10rpx;
}


 
.searall {
  position: relative;
}
 .cuIcon-search {
   display: inline-block;
   line-height: 60rpx;
   font-size: 30rpx;
   
 }
 .cu-item {
   width: 81%;
   height: 60rpx;
   display: flex;
   border-radius: 30rpx 30rpx;
   border: 1px solid #e0e0e0;
 }
.cu-bar .search-form [class*="cuIcon-"] {
margin: 0 0 0 30rpx;
text-align: center;

}
.bg-greenblue {
  background-color: #36d3d5;
  color: #fff;
}
.cu-btn {
  height: 60rpx;
}

/* 顶部商品tab栏部分 */
.list-bar {
  height: 88rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #e6e6e6;
}
.list-bar-text {
color: #111;
font-size: 26rpx;
line-height: 88rpx;
text-align: center;
}
.price-updown {
  display: inline-block;
  vertical-align: middle;
}
.cuIcon-triangleupfill,
.cuIcon-triangledownfill {
  line-height: 50%;
}
.triangle-active,
.tab-active {
 color: #36d3d5;
}
.cuIcon-cascades {
 color: #36d3d5;
  font-size: 40rpx;
}
.cuIcon-list {
  color: #36d3d5;
  font-size: 40rpx;
}

/* 底部商品列表部分 */
/* 商品列表横 */
.searchshow-list-row {
  padding: 0 15rpx;
  margin: 20rpx 0;

}
.list-left,.list-right{
  width: 50%;
  /* display:flex; */
  /* flex:1; */
  /* flex-wrap: wrap; */
  vertical-align: top;
  display: inline-block;

}
.show-list-item {
  margin: 15rpx  15rpx 20rpx;
  box-shadow: 0rpx 5rpx 10rpx rgba(0, 0, 0, 0.1);
  padding-bottom: 10rpx;

}
.item-img {
  width: 333rpx;
  height: 333rpx;
  
}
.item-img image {
  width: 100%;
  height: 100%;
  
}
.item-title {
  /* 超过两行隐藏 */
  text-align: left;
  font-size: 28rpx;
  color: #111;
  margin: 10rpx 15rpx 0;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-price {
margin: 0 15rpx;
}
.price-red {
  color: #ef4d4d;
  font-size: 32rpx;
  font-weight: 700;
  display: inline-block;
}
.price-gray {
  color: #333;
  font-size: 24rpx;
  margin-left: 20rpx;
  display: inline-block;
}
/* .price-gray::after {
  content: ' v';
  font-style: italic;
  font-weight: 700;
} */
.price-v {
  /* content: ' v'; */
  font-style: italic;
  font-weight: 700;
  color: #efbb1a
}
.discount {
  padding: 5rpx 10rpx;
  display: inline-block;
  color: #e83c3c;
  font-size: 22rpx;
  border: 1px solid #e83c3c;
  margin-top: 10rpx;
  /* margin-left: 10rpx; */
}
.count {
  font-size: 26rpx;
  margin: 15rpx 20rpx 10rpx;
  line-height: 46rpx
}
.sum-text {
color: #999;
}
.sum-num {
  color:#3dc8ca;
}
.add-to-cart {
  font-size: 37rpx;
  margin-left: 35rpx;
  color: #3dc8ca;
  float: right
}
/* 商品列表纵 */
.showlist-item-column {
  border-bottom: 1px solid #f1f1f1;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 30rpx;
}
.item-img-column {
display: inline-block;
width: 170rpx;
  height: 170rpx;
}
.item-img-column image {
  width: 100%;
  height: 100%;
  
}
.column-item-right {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 75%;
  padding: 15rpx;
}
.item-title-column {
  /* 超过一行隐藏 */
  text-align: justify;
  font-size: 28rpx;
  color: #111;
  margin: 0rpx 15rpx 0;
  line-height: 55rpx;
  white-space: nowrap; 
  width: 100%; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.item-price-column {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 15rpx 15rpx 0rpx;
}
.discount-column {
  padding: 5rpx 10rpx;
  display: inline-block;
  color: #e83c3c;
  font-size: 22rpx;
  border: 1px solid #e83c3c;
  margin-left: 30rpx;
}
.count-column {
  font-size: 26rpx;
  margin: 0rpx 20rpx 0rpx;
  color: #aaa;
  line-height: 46rpx;
}
.add-to-cart-column {
  font-size:37rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  color: #3dc8ca;
}
.saleNum {
  margin-left: 44rpx;
}
