/* pages/membership-open/membership-open.wxss */

page {
  background-color: #f4f5fb;
}

.navTop image {
  width: 100%;
  height: 562rpx;
}

.navTop {
  z-index: -1;
}

.open-bottom {
  position: fixed;
  bottom: 45rpx;
  z-index: 9;
  height: 155rpx;
  width: 100%;
  padding: 30rpx 90rpx;
  /* background-color: #fff; */
  transition: opacity 1s;
}

.open-btn {
  width: 100%;
  color: #fff;
  background-color: #f6544b;
  text-align: center;
  font-size: 32rpx;
  display: inline-block;
  padding: 30rpx 100rpx;
  font-weight: 700;
  border-radius: 50rpx;
}

.cuIcon-back {
  position: fixed;
  color: #fff;
  font-size: 52rpx;
  z-index: 2;
  left: 2rpx;
  top: 38rpx;
  padding: 20rpx;
}

.member-box {
  width: 100%;
  height: 500rpx;
  text-align: center;
  padding: 20rpx;
}

.member-title {
  text-align: left;
  font-size: 34rpx;
  line-height: 78rpx;
  padding: 0 15rpx;
  font-weight: 700;
}

.member-list {
  display: flex;
  justify-content: space-around;
}

.type-item {
  /* flex: 1; */
  width: 30%;
  border: 4rpx solid rgb(230, 227, 227);
  padding: 40rpx 10rpx;
  border-radius: 15rpx;
}

.item-time {
  font-size: 34rpx;
  font-weight: 700;
}

.item-bottom {
  margin-right: 10rpx;
}

.item-price {
  font-size: 82rpx;
  color: red;
  font-weight: 700;
  line-height: 160rpx;
}

.price-icon {
  color: red;
}

.active {
  border: 4rpx solid red;
}

.privilege {
  border: 2rpx solid rgb(230, 227, 227);
  line-height: 80rpx;
  border-radius: 15rpx;
  padding: 0 20rpx;
  text-align: justify;
  font-size: 30rpx;
}

.disappear {
  opacity: 0;
}
