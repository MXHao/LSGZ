/* components/search-list/searchList.wxss */
/* 底部商品列表部分 */
/* 商品列表横 */
.searchshow-list-row {
  padding: 0 15rpx;
  margin: 30rpx 0;

}
.list-left,.list-right{
  width: 50%;
  /* display:flex; */
  /* flex:1; */
  /* flex-wrap: wrap; */
  vertical-align: top;
  display: inline-block;

}
.show-list-item {
  margin: 15rpx  15rpx 40rpx;
  box-shadow: 0rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
  border-radius: 15rpx 15rpx;
  padding-bottom: 10rpx;

}
.item-img {
  width: 333rpx;
  height: 333rpx;
  
}
.item-img image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
  
}
.item-title {
  /* 超过两行隐藏 */
  text-align: left;
  font-size: 24rpx;
  color: #111;
  margin: 10rpx 15rpx 0;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-price {
margin: 0 15rpx;
}
.price-red {
  color: #ef4d4d;
  font-size: 32rpx;
  font-weight: 700;
  display: inline-block;
}
.price-gray {
  color: #333;
  font-size: 24rpx;
  margin-left: 20rpx;
  display: inline-block;
}
/* .price-gray::after {
  content: ' v';
  font-style: italic;
  font-weight: 700;
} */
.price-v {
  /* content: ' v'; */
  font-style: italic;
  font-weight: 700;
}
.discount {
  padding: 5rpx 10rpx;
  display: inline-block;
  color: #e83c3c;
  font-size: 16rpx;
  border: 1px solid #e83c3c;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.count {
  font-size: 24rpx;
  margin: 5rpx 20rpx 10rpx;
}
.sum-text {
color: #999;
}
.sum-num {
  color:#3dc8ca;
}
.add-to-cart {
  font-size: 40rpx;
  margin-left: 35rpx;
  color: #3dc8ca;
}
/* 商品列表纵 */
.showlist-item-column {
  border-bottom: 1px solid #e6e6e6;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 30rpx 30rpx;
}
.item-img-column {
display: inline-block;
width: 170rpx;
  height: 170rpx;
}
.item-img-column image {
  width: 100%;
  height: 100%;
  
}
.column-item-right {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  width: 75%;
}
.item-title-column {
  /* 超过一行隐藏 */
  text-align: left;
  font-size: 24rpx;
  color: #111;
  margin: 0rpx 15rpx 0;
  line-height: 55rpx;
  white-space: nowrap; 
  width: 100%; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.item-price-column {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 15rpx;
}
.discount-column {
  padding: 5rpx 10rpx;
  display: inline-block;
  color: #e83c3c;
  font-size: 16rpx;
  border: 1px solid #e83c3c;
  margin-left: 30rpx;
}
.count-column {
  font-size: 24rpx;
  margin: 15rpx 20rpx 0rpx;
  position: relative;
}
.add-to-cart-column {
  font-size: 40rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  color: #3dc8ca;
}