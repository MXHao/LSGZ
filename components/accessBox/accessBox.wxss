/* components/accessBox/accessBox.wxss */
.box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}
.cover {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
  position: fixed;
  z-index:10001;

  /* margin-top: -20rpx */
}
.msg-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  font-weight: bolder;
  font-size: 38rpx;
}
.msguser {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 30rpx;
}
.msg {
  margin: 20rpx;
}.btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 70rpx !important;
}

.btn-cancle {
  margin: 10rpx 30rpx;
  border-radius: 98rpx;
  padding: 17rpx 30rpx !important;
  line-height: 1;
  background-color: white !important;
  color: #36d3d5 !important;
  border: 1rpx solid #36d3d5 !important;
}

.btn-confirm {
   margin: 10rpx 30rpx;
  padding: 17rpx 30rpx !important;
  line-height: 1;
  border-radius: 98rpx;
  background-color: #36d3d5 !important;
  color: white !important;
}
.modalDlg {
  height: 50%;
  z-index: 6;
  background-color: white;
  border-radius: 30rpx;
  position: fixed;
  top: 30%;
  left: 10%;
  width: 80%;
}